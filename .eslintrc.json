{
	"extends": "xo",
	"parserOptions": {
		"ecmaVersion": 8
	},
	"env": {
		"es6": true,
		"node": true
	},
	"rules": {
		"curly": [
			"error",
			"all"
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"eqeqeq": [
			"error",
			"allow-null"
		],
		"no-eq-null": [
			"off"	
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"prefer-const": [
			"error"
		],
		"no-var": [
			"error"
		]
	}
}
